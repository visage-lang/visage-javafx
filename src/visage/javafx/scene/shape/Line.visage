package visage.javafx.scene.shape;

/**
* This Line represents a line segment in (x,y) coordinate space.
* @author William Ant√¥nio <william.a.siqueira@gmail.com>
**/
public class Line extends Shape{
    override def wrappedNode = javafx.scene.shape.Line {}
    public-read def wrappedLine = bind wrappedNode as javafx.scene.shape.Line;    
    /**
     * The X coordinate of the end point of the line segment.
     **/
    public var endX:Double on replace{
        if (isInitialized(this) or endX != 0){
            wrappedLine.setEndX(endX);
        }
    }    
    
    /**
     * The Y coordinate of the end point of the line segment.
     **/
     public var endY:Double on replace{
        if (isInitialized(this) or endY != 0){
            wrappedLine.setEndY(endY);
        }
    }
    
    /**
     * The X coordinate of the start point of the line segment.
    **/     
    public var startX:Double on replace{
        if (isInitialized(this) or startX != 0){
            wrappedLine.setStartX(startX);
        }
    }
    /**
     * The Y coordinate of the start point of the line segment.
    **/     
    public var startY:Double on replace{
        if (isInitialized(this) or startY != 0){
            wrappedLine.setStartY(startY);
        }
    }    
}